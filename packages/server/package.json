{
  "name": "@igloo/server",
  "version": "1.0.0",
  "description": "The Igloo's application server",
  "license": "MIT",
  "main": "src/main.ts",
  "scripts": {
    "test": "jest",
    "dev": "tsnd --respawn --transpile-only -r tsconfig-paths/register ./src/main.ts",
    "build": "swc src -d dist",
    "start": "node dist/main.js",
    "migrate": "prisma migrate dev",
    "generate": "prisma generate",
    "fmt": "deno fmt --config deno.json",
    "database": "docker-compose --env-file .env up database"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.183",
    "@swc/jest": "^0.2.21",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.21",
    "jest": "^28.1.0",
    "prisma": "^3.11.0",
    "regenerator-runtime": "^0.13.9",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@prisma/client": "^3.11.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "cpf-cnpj-validator": "^1.0.3",
    "dotenv": "^16.0.1",
    "email-validator": "^2.0.4",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "libphonenumber-js": "^1.9.50"
  }
}
