{
  "name": "@igloo/server",
  "version": "1.0.0",
  "description": "The Igloo's application server",
  "license": "MIT",
  "main": "src/main.ts",
  "scripts": {
    "test": "jest",
    "test:cache": "jest --clearCache",
    "test:watch": "jest --watch",
    "test:files": "file_server coverage/lcov-report",
    "test:database": "docker-compose --env-file .env.test up database-test",
    "dev": "tsnd --respawn --transpile-only -r tsconfig-paths/register ./src/main.ts",
    "build": "swc src -d dist",
    "start": "node -r dotenv/config dist/main.js dotenv_config_path=.env",
    "migrate": "prisma migrate dev",
    "generate": "prisma generate",
    "fmt": "deno fmt --config deno.json",
    "database": "docker-compose --env-file .env up database"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.197",
    "@swc/jest": "^0.2.21",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.40",
    "@types/node-fetch": "^2.6.1",
    "@types/pg": "^8.6.5",
    "jest": "^28.1.0",
    "jest-environment-node": "^28.1.0",
    "prisma": "^3.14.0",
    "regenerator-runtime": "^0.13.9",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "cpf-cnpj-validator": "^1.0.3",
    "dotenv": "^16.0.1",
    "email-validator": "^2.0.4",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "libphonenumber-js": "^1.10.6",
    "node-fetch": "^2.6.7",
    "pg": "^8.7.3"
  }
}
